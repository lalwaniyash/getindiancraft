<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Product</h1>
    <div class="col-lg-3 order-2 order-lg-1">
        <aside class="sidebar-wrapper">
            <!-- single sidebar start -->
            <div class=" flex items-left ">
                <h3 class="text-xl font-bold mb-12">Categories</h3>
                <div class="">
                    <ul class="flex items-left mt-1 px-10">
                        <li class="ml-6"><a href="#">Clay</a></li>
                        <li class="ml-6"><a href="#">Jute </a></li>
                        <li class="ml-6"><a href="#">Bamboo </a></li>
                        <li class="ml-6"><a href="#">Weeving </a></li>
                        <li class="ml-6"><a href="#">Clothes</a></li>
                        <li class="ml-6"><a href="#">Candles </a></li>
                    </ul>
                </div>
            </div>

        </aside>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <%bamboos.forEach(function(pizza) { %>
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg">
                        <%= pizza.name %>
                    </h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs">
                        <%= pizza.size %>
                    </span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>"
                            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-1">Add</span>
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>

    </div>
</section>